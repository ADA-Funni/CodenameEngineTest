<!DOCTYPE codename-engine-dialogue-box>
<dialoguebox sprite="pixel/dialogueBox" antialiasing="false" graphicSizex="1344" x="20" y="-215" textSound="pixel/pixelText" nextSound="pixel/clickText">
	<!--
		Node containing all text settings
	-->
	<text font="pixel.otf" x="242" y="218" width="768" color="#3f2021" size="32" antialiasing="false" borderSize="2" borderStyle="shadow" borderColor="#D89494" />

	<!--
		All positions for characters
	-->
	<charpos name="left" x="-500" y="184" />
	<charpos name="middle" x="0" y="184" />
	<charpos name="right" x="500" y="184" flipBubble="true" />

	<!--
		All animations for the dialogue box
		For example, if you wanna add an "angry" animation, add an animation named "angry" (box idle), and "angry-open" (not needed, for box apparition)
	-->
	<anim name="normal" anim="Text Box Appear instance 10004" fps="24" loop="true"/>
	<anim name="normal-open" anim="Text Box Appear instance 10" fps="24" />
</dialoguebox>